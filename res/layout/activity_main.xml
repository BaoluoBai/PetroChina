            android:textColor="#FFFFFF"
            android:textSize="32sp"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="800px"
        android:background="#FFFFFF"
        android:orientation="horizontal">
        
